<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tablayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x150"
    android:layout_marginStart="@dimen/x15"
    android:layout_marginEnd="@dimen/x15"
    android:background="@color/cl_no_color"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:scrollbars="none"
    app:tabBackground="@color/cl_no_color"
    app:tabGravity="fill"
    app:tabIndicatorHeight="0dp"
    app:tabMaxWidth="0dp"
    app:tabMinWidth="0dp"
    app:tabMode="scrollable"
    app:tabPaddingEnd="@dimen/x15"
    app:tabPaddingStart="@dimen/x15"
    app:tabRippleColor="@android:color/transparent"
    app:tabTextAppearance="@style/TabText" />

