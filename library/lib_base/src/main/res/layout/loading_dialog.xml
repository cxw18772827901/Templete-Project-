<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/x50">
    <!--android:paddingHorizontal="@dimen/x65"
    android:paddingTop="@dimen/x50"
    android:paddingBottom="@dimen/x35">-->

    <ImageView
        android:id="@+id/iv_pro"
        android:layout_width="@dimen/loading_top_padding"
        android:layout_height="@dimen/loading_top_padding"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_loading_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x35"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="加载中..."
        android:textColor="@color/cl_white"
        android:textSize="@dimen/x42"
        android:visibility="gone" />
</LinearLayout>