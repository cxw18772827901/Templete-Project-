<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--android:layout_width="@dimen/x50"-->
        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/ll_container"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            app:shape_radius="@dimen/x50"
            app:shape_solidColor="@color/cl_999" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_add_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginBottom="@dimen/x90"
            android:drawableStart="@drawable/ic_add_item"
            android:drawablePadding="@dimen/x20"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/x60"
            android:paddingVertical="@dimen/x20"
            android:text="添加一个选项"
            android:textColor="@color/cl_333333"
            android:textSize="16sp"
            app:shape_radius="@dimen/x60"
            app:shape_solidColor="@color/white"
            app:shape_solidPressedColor="@color/cl_ddd"
            tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
    </LinearLayout>
</ScrollView>
