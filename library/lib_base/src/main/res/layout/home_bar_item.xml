<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/x160"
    android:layout_gravity="center_vertical"
    android:paddingHorizontal="@dimen/x30">

    <com.hjq.shape.layout.ShapeFrameLayout
        android:id="@+id/indicator"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/x10"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/x55"
        app:shape_radius="@dimen/x5"
        app:shape_solidColor="@color/green"
        app:shape_solidSelectedColor="@color/cl_yellow" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x160"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="条目一"
        android:textColor="@color/white"
        android:textSize="@dimen/x55"
        tools:ignore="HardcodedText" />
</FrameLayout>