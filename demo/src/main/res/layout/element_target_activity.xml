<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.shape.view.ratioLayout.RatioImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:transitionName="ivTransform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:round_border_color="@color/red"
        app:round_border_width="0dp"
        app:round_img_shape="normal"
        app:sizeRatio="2"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x40"
        android:maxLines="1"
        android:text="点击图片查看效果"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/x65"
        android:transitionName="tvTransform"
        app:layout_constraintBottom_toTopOf="@id/iv"
        app:layout_constraintLeft_toLeftOf="@id/iv"
        app:layout_constraintRight_toRightOf="@id/iv"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>