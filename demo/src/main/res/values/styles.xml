<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.BG" parent="AppTheme">
        <item name="android:windowBackground">@drawable/ic_bg_10_1</item>
        <!--<item name="android:windowBackground">@color/transparent</item>-->
    </style>

    <style name="bottom_host_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/x5</item>
        <item name="android:textColor">@color/tab_tv_col_sel</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="bottom_host_iv">
        <item name="android:layout_width">@dimen/x60</item>
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="bottom_host_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>