<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x45"
            android:gravity="center"
            android:orientation="horizontal">

            <com.hjq.shape.view.SwitchButton
                android:id="@+id/btn"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:checked="true" />

            <com.hjq.shape.view.SwitchButton
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:checked="false" />

            <com.hjq.shape.view.SwitchButton
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:enabled="false" />

        </LinearLayout>

        <com.hjq.shape.view.textview.DrawableTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:drawableStart="@drawable/avatar_placeholder_ic"
            android:drawablePadding="@dimen/x20"
            android:gravity="center_vertical"
            android:padding="@dimen/x30"
            android:text="可修改Drawable和背景的TextView"
            android:textSize="@dimen/x40"
            app:drawableHeight="@dimen/x50"
            app:drawableWidth="@dimen/x50"
            app:shape_radius="@dimen/x20"
            app:shape_shadowColor="@color/cl_666"
            app:shape_shadowOffsetY="@dimen/x3"
            app:shape_shadowSize="@dimen/x4"
            app:shape_solidColor="@color/white"
            tools:ignore="HardcodedText" />

        <com.hjq.shape.view.textview.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:bar_leftText="左文本"
            app:bar_rightDrawable="@drawable/arrows_right_ic"
            app:bar_rightText="右文本" />

        <com.hjq.shape.view.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            app:grade="2.5"
            app:gradeStep="half" />

        <per.wsj.library.AndRatingBar
            android:id="@+id/rating_bar1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_marginTop="@dimen/x40"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:stepSize="0.5"
            app:bgColor="@color/cl_999"
            app:scaleFactor="1.1"
            app:starColor="@color/cl_1692DB"
            app:starSpacing="10dp" />

        <per.wsj.library.AndRatingBar
            android:id="@+id/rating_bar2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_marginTop="@dimen/x50"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:stepSize="0.5"
            app:bgDrawable="@drawable/rating2"
            app:keepOriginColor="true"
            app:scaleFactor="1.1"
            app:starDrawable="@drawable/rating"
            app:starSpacing="10dp" />

        <per.wsj.library.AndRatingBar
            android:id="@+id/rating_bar3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_marginTop="@dimen/x50"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            app:bgDrawable="@drawable/star_gray"
            app:keepOriginColor="true"
            app:scaleFactor="1.1"
            app:starDrawable="@drawable/star_blue"
            app:starSpacing="10dp" />

        <com.hjq.shape.view.ratioLayout.RatioImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x80"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            app:round_border_color="@color/red"
            app:round_border_width="0dp"
            app:round_img_shape="normal"
            app:sizeRatio="2"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <com.hjq.shape.view.ratioLayout.RatioImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x80"
            android:adjustViewBounds="false"
            app:round_border_color="@color/red"
            app:round_border_width="0dp"
            app:round_img_shape="normal"
            app:round_mutate_background="false"
            app:round_tile_mode_y="mirror"
            app:sizeRatio="1"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x400"
            android:layout_marginTop="@dimen/x50"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x400"
            android:layout_marginTop="@dimen/x50"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <com.fangxu.library.DragContainer
            android:id="@+id/drag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y73"
            android:background="@color/white"
            app:dc_footer_color="#e5e5e5">

            <TextView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y266"
                android:gravity="center"
                android:text="这是拖拽view"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/x45"
                tools:ignore="HardcodedText" />
            <!--android:layout_height="@dimen/y240" />-->

        </com.fangxu.library.DragContainer>
    </LinearLayout>
</ScrollView>
